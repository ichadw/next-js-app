{
  "extends": [
    "airbnb",
    "eslint:all",
    "plugin:react/all",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "env": {
    "amd": true,
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module",
    "ecmaFeatures": {
      "generators": false,
      "legacyDecorators": true,
      "objectLiteralDuplicateProperties": false
    }
  },
  "ignorePatterns": ["node_modules/", ".next/"],
  "settings": {
    "import/resolver": {
      "alias": [
        ["@/components", "./components"],
        ["@/layouts", "./layouts"],
        ["@/pages", "./pages"],
        ["@/styles", "./styles"]
      ]
    }
  }
}
